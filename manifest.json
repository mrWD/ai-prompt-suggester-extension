{
  "manifest_version": 3,
  "name": "AI Prompt Suggester",
  "version": "1.0",
  "description": "Get AI prompt suggestions for various chat platforms",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://chat.lmsys.org/*",
    "https://chatgpt.com/*",
    "https://chat.mistral.ai/*",
    "https://perplexity.ai/*",
    "https://grok.com/*",
    "https://chat.deepseek.com/*",
    "https://copilot.microsoft.com/*",
    "https://chat.qwen.ai/*",
    "https://lmarena.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://chat.lmsys.org/*",
        "https://chatgpt.com/*",
        "https://chat.mistral.ai/*",
        "https://perplexity.ai/*",
        "https://grok.com/*",
        "https://chat.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://chat.qwen.ai/*",
        "https://lmarena.ai/*"
      ],
      "js": [
        "src/js/utils/PlatformUtils.js",
        "src/js/utils/ChatInputUtils.js",
        "src/js/services/PromptService.js",
        "src/js/components/Modal.js",
        "src/js/components/SuggestionButton.js",
        "src/js/content.js"
      ],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "prompts/*.json"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://chat.lmsys.org/*",
        "https://chatgpt.com/*",
        "https://chat.mistral.ai/*",
        "https://perplexity.ai/*",
        "https://grok.com/*",
        "https://chat.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://chat.qwen.ai/*",
        "https://lmarena.ai/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}